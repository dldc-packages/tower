{
  "name": "@dldc/tower",
  "version": "0.1.29",
  "exports": {
    ".": "./mod.ts",
    "./types": "./src/types.ts"
  },
  "tasks": {
    "bump": "deno run -A jsr:@mys/bump@1",
    "update": "deno run -A jsr:@molt/cli",
    "update:commit": "deno task -q update --commit",
    "check": "deno check && deno fmt --check && deno lint",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "command:init": "deno run --allow-all src/cli/init.ts",
    "command:serve": "deno run --allow-all src/cli/serve.ts"
  },
  "fmt": {
    "lineWidth": 100
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "exclude": [
    ".git"
  ],
  "imports": {
    "@felix/bcrypt": "jsr:@felix/bcrypt@^1.0.8",
    "@opentelemetry/api": "npm:@opentelemetry/api@^1.9.0",
    "@std/cli": "jsr:@std/cli@^1.0.26",
    "@std/yaml": "jsr:@std/yaml@^1.0.11",
    "@valibot/valibot": "jsr:@valibot/valibot@^1.2.0"
  }
}
