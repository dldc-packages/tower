{
  "name": "@dldc/tower",
  "version": "0.1.0",
  "exports": {
    ".": "./mod.ts",
    "./types": "./src/types.ts"
  },
  "tasks": {
    "bump": "deno run -A jsr:@mys/bump@1",
    "update": "deno run -A jsr:@molt/cli",
    "update:commit": "deno task -q update --commit",
    "check": "deno check && deno fmt --check && deno lint",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "fmt": {
    "lineWidth": 100
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "exclude": [
    ".git"
  ],
  "imports": {
    "@inquirer/prompts": "npm:@inquirer/prompts@^8.2.0",
    "@opentelemetry/api": "npm:@opentelemetry/api@^1.9.0",
    "@std/cli": "jsr:@std/cli@^1.0.26"
  }
}
